<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.microsoft.xbox.toolkit.ui.XLEUniversalImageView
        android:id="@+id/image_title_subtitle_button_image"
        android:layout_width="@dimen/friendFinderIconButtonWidth"
        android:layout_height="@dimen/friendFinderIconButtonHeight"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/friendFinderIconButtonHeight"
        android:layout_marginStart="@dimen/friendFinderPageMargin"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <com.microsoft.xbox.toolkit.ui.CustomTypefaceTextView
            android:id="@+id/image_title_subtitle_button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <com.microsoft.xbox.toolkit.ui.CustomTypefaceTextView
            android:id="@+id/image_title_subtitle_button_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="15sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>